<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
{% block body %}
    <div class="header">
        <div class="t"><img src="{{ asset('../images/title.jpg') }}"></div>
        <div class="language"><img src="{{ asset('../images/usa.jpg') }}" width="15" height="12">
            <img src="{{ asset('../images/rus.jpg') }}" width="15" height="12" ></div>
    </div>
    <div class="container_logout">
        <div class="auth">
            Welcome,<a href="{{ path('admin_home') }}" title="Personal account"><strong>{{ app.user.username }}</strong></a>
        </div>
        <div class="logout_button">
            <a class="btn btn-logout btn-sm btn-block" href="{{ path('logout') }}">Log out</a>
        </div>
    </div>
    {% block category %}
        <div class="sidebar_categories">
            <h1>Categories</h1>
            {% for category in categories %}
                <ul>{{ category.name }}</ul>
            {% endfor %}
        </div>
    {% endblock category%}
<div class="content">
    <table>
    <tr>
        <th>Sort by: {{ knp_pagination_sortable(pagination, 'Release', ['p.creationDate', 'p.creationDate']) }} |
        {{ knp_pagination_sortable(pagination, 'Rating', ['p.rating', 'p.rating']) }}</th>
    </tr>

    {% for post in pagination %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td><div class="posts_conteiner">
                    <div class="post_title">{{ post.title }}</div>
                    <div class="post_date">{{ post.creationDate | date('h:m:s d M Y') }} ({{ post.rating }})</div>
                    <div class="post_show">
                        <div class="post_image"><img src="{{ asset('../images/~.jpg') }}" width="180" height="140"></div>
                        <div class="post_summary">{{ post.summary }}
                            <div class="read_more"><a href="{{ path('post', {'id': post.id}) }}"> <button class="read_more">Read more</button></a></div></div>
                    </div>
                </div>

            </td>
        </tr>
    {% endfor %}
     </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
    <form class="navbar-form navbar-fixed-top" role="search" action="{{ path('post_search') }}" method="post">
        <div class="form-group">
            <input type="search" name="query" class="form-control" placeholder="{{ 'search' }}" value="{% if searched is defined %}{{ searched }}{% endif %}">
            <button type="submit" class="btn btn-default">{{ 'search' }}</button>
        </div>
    </form>
{% endblock %}